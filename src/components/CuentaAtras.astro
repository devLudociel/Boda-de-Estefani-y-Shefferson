    <div id="hours" class="flex flex-col items-center justify-center col-span-1 w-full md:h-40 h-32 bg-main rounded-xl text-bold md:text-4xl text-white sombra"></div>
    <div id="minutes" class="flex flex-col items-center justify-center col-span-1 w-full md:h-40 h-32 bg-main rounded-xl text-bold md:text-4xl text-white sombra"></div>
    <div id="seconds" class="flex flex-col items-center justify-center col-span-1 w-full md:h-40 h-32 bg-main rounded-xl text-bold md:text-4xl text-white sombra"></div>
</div>

<div class="container m-auto">
    <img src="/public/img/teffy.webp" alt="Novios abrazdos" class="filtro">
</div>

<div class="container m-auto w-full mt-8">
    <p class="name lg:text-4xl text-main flex items-center justify-center mt-8 font-extrabold uppercase">Diciembre</p>
</div>

<div class="grid auto-cols-5 grid-flow-col gap-5 text-center container m-auto mt-16">

  <div class="col-span-2">
    <div class="flex flex-col items-center justify-center gap-4">
      <span class="bg-main w-full h-2 rounded-lg"></span>
      <p class="md:text-4xl font-bold text-xl">Sabadó</p>
      <span class="bg-main w-full h-2 rounded-lg"></span>
    </div>
  </div>

  <div class="col-span-1">
    <div class="flex flex-col items-center justify-center gap-4">
      <p class="text-4xl font-bold">14</p>
      <span class="name">2024</span>
    </div>
  </div>

  <div class="col-span-2">
    <div class="flex flex-col items-center justify-center gap-4">
      <span class="bg-main w-full h-2 rounded-lg"></span>
      <p class="md:text-4xl text-xl font-bold">6:00 P.M</p>
      <span class="bg-main w-full h-2 rounded-lg"></span>
    </div>
  </div>
</div>


<script>
  function updateCountdown() {
    const weddingDate = new Date('2024-12-14T22:00:00'); // Cambia esta fecha a la de tu boda
    const now = new Date();
    const timeDifference = weddingDate.getTime() - now.getTime(); // Convertimos las fechas a milisegundos

    const days = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
    const hours = Math.floor((timeDifference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);

    document.getElementById('days').innerText = `${days} Días`;
    document.getElementById('hours').innerText = `${hours} Horas`;
    document.getElementById('minutes').innerText = `${minutes} Min`;
    document.getElementById('seconds').innerText = `${seconds} Seg`;
  }

  setInterval(updateCountdown, 1000);
</script>

